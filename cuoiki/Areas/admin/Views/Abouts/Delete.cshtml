@model cuoiki.Models.About

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/admin/Views/Shared/_MyLayout.cshtml";
}
<style>
    img {
        width: 150px;
        height: 150px;
    }
</style>
<h2>Xóa</h2>

<h3>Bạn có chắc muốn xóa?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tiêu đề
        </dt>

        <dd>
            @Html.DisplayFor(model => model.title)
        </dd>

        <dt>
            Nội dung
        </dt>

        <dd>
            @Html.Raw(Model.content)
        </dd>

        <dt>
            Hình ảnh
        </dt>

        <dd>
            <img src="~/Uploads/images/about/@Model.img" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
        </dd>

        <dt>
            Ẩn
        </dt>

        <dd>
            @Html.DisplayFor(model => model.hide)
        </dd>

        <dt>
            Ngày tạo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.datebegin)
        </dd>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
</div>
